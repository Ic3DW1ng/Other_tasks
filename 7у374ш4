int number = 5; // объявление переменной со значением
number = 10; // присваивание (изменение) значения переменной
Debug.Log(number); // вывод переменной на консоль
int number = 5;
Debug.Log(number);
number = 10;
Debug.Log(number);
int number = 5;
Debug.Log("Значение переменной: " + number);
uint number = 5;
Debug.Log(number);
// Примечание: uint не может хранить отрицательные значения
